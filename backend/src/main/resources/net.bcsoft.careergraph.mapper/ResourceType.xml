<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="net.bcsoft.careergraph">

    <resultMap id="resourceTypeResultMap" type="net.bcsoft.careergraph.entity.Roadmap">
        <id property="id" column="id"/>
    </resultMap>

    <select id="selectAll" resultMap="resourceTypeResultMap">
        SELECT * FROM resource_type
    </select>

    <select id="select" resultMap="resourceTypeResultMap">
        SELECT *
        FROM resource_type
        WHERE id = #{id}
    </select>

    <insert id="insert" useGeneratedKeys="true" keyProperty="id" keyColumn="id" parameterType="net.bcsoft.careergraph.entity.ResourceType">
        INSERT INTO resource_type (id)
        VALUES (#{id})
    </insert>
    <update id="update" parameterType="net.bcsoft.careergraph.entity.ResourceType">
        UPDATE resource_type
        SET id = #{id}
        WHERE
    </update>

</mapper>