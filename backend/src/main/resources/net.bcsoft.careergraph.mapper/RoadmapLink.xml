<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="net.bcsoft.careergraph.mapper.RoadmapLinkMapper">

    <select id="selectById" resultMap="roadmapLinkResultMap">
        SELECT * FROM roadmap_link
        WHERE id = #{id}
    </select>

    <resultMap id="roadmapLinkResultMap" type="net.bcsoft.careergraph.entity.RoadmapLink">
        <id property="id" column="id"/>
        <result property="idRoadmap" column="roadmap_id"/>
        <result property="idStep" column="step_id"/>
    </resultMap>


    <insert id="insert" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO roadmap_link (step_id, roadmap_id)
        VALUES (#{roadmapLink.idStep}, #{roadmapLink.idRoadmap})
    </insert>

    <update id="update" parameterType="net.bcsoft.careergraph.entity.Roadmap">
        UPDATE roadmap_link
        SET step_id = #{roadmapLink.idStep}, roadmap_id = #{roadmapLink.idRoadmap}
        WHERE id = #{id}
    </update>
</mapper>