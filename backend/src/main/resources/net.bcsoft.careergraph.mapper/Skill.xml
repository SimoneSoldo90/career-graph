<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="net.bcsoft.careergraph.mapper.SkillDAO">
    <select id="selectAll" resultMap="skillResultMap">
        SELECT * FROM skill
    </select>

    <resultMap id="stepResultMap" type="net.bcsoft.careergraph.entity.Skill">
        <id property="id" column="id"/>
        <result property="title" column="title"/>
        <result property="description" column="description"/>
    </resultMap>


    <insert id="insert" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO skill (title, description)
        VALUES (#{skill.title}, #{skill.description})
    </insert>

    <update id="update" parameterType="net.bcsoft.careergraph.entity.Skill">
        UPDATE skill
        SET title = #{skill.title}, description = #{skill.description}
        WHERE id = #{id}
    </update>
</mapper>