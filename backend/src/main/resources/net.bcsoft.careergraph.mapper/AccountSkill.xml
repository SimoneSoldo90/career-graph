<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="net.bcsoft.careergraph.mapper.AccountSkillMapper">
    <select id="selectAll" resultMap="accountSkillResultMap">
        SELECT * FROM account_skill
    </select>

    <select id="selectById" resultMap="accountSkillResultMap" parameterType="net.bcsoft.careergraph.entity.AccountSkill">
        SELECT * FROM account_skill
        WHERE id = #{id}
    </select>
    <resultMap id="accountSkillResultMap" type="net.bcsoft.careergraph.entity.AccountSkill">
        <id property="id" column="id"/>
        <result property="idAccount" column="account_id"/>
        <result property="idSkill" column="skill_id"/>
        <result property="idSkillStatus" column="skill_status_id"/>
    </resultMap>

    <insert id="insert" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO account_skill (account_id, skill_id, skill_status_id)
        VALUES (#{accountSkill.idAccount}, #{accountSkill.idSkill}, #{accountSkill.idSkillStatus})
    </insert>

    <update id="update" parameterType="net.bcsoft.careergraph.entity.AccountSkill">
        UPDATE account_skill
        SET account_id = #{accountSkill.idAccount}, skill_id = #{accountSkill.idSkill}, skill_status_id = #{accountSkill.idSkillStatus}
        WHERE id = #{accountSkill.id}
    </update>

</mapper>