<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="net.bcsoft.careergraph.mapper.RoadmapMapper">

    <select id="selectById" resultMap="roadmapResultMap">
        SELECT * FROM roadmap
        WHERE id = #{id}
    </select>
    <resultMap id="roadmapResultMap" type="net.bcsoft.careergraph.entity.Roadmap">
        <id property="id" column="id"/>
        <result property="idStep" column="title"/>
        <result property="idSkill" column="description"/>
        <result property="idResourceType" column="description"/>
        <result property="description" column="description"/>
        <result property="url" column="description"/>
    </resultMap>

    <insert id="insert" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO roadmap (title, description)
        VALUES (#{title}, #{description})
    </insert>
    
    <update id="update" parameterType="net.bcsoft.careergraph.entity.Roadmap">
        UPDATE roadmap
        SET title = #{title}, description = #{description}
        WHERE id = #{id}
    </update>

</mapper>